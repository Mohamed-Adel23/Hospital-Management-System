<body id="top">

    <section class="page-title bg-1">
      <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block text-center">
                        <h1 class="text-capitalize mb-5 text-lg">Hospital Management System</h1>
                        <ul class="list-inline breadcumb-nav">
                            <li class="list-inline-item"><a asp-controller="Home" asp-action="Index" class="except"> Home</a></li>
                            <li class="list-inline-item"><span class="text-white">/</span></li>
                            <li class="list-inline-item"><a href="#" class="text-white-50">Password Confirmation</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>



<h1 style="text-align: center;margin-top: 50px;">@ViewData["Title"]</h1>
<hr />
<div class="row" style="width: 60%;margin: 100px auto;">
    @* <div class="col-md-4"> *@
    <form method="post">
        <h2 style="font-family: var(--bs-body-font-family);font-weight: unset;">Enter your email.</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" style="width: 30%;outline: none;border: none;transition-duration: .5s;" class=" btn-lg btn-primary">Reset Password</button>
    </form>
    @* </div> *@
</div>


</body>
</html>