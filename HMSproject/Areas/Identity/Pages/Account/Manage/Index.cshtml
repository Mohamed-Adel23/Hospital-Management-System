@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<section class="page-title bg-1">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="block text-center">
              <span class="text-white">Patient Details</span><br/><br/>
              <h1 class="text-capitalize mb-5 text-lg"> @Model.Input.Name</h1>

              <ul class="list-inline breadcumb-nav">
                <li class="list-inline-item">
                  <a asp-controller="Home" asp-action="Index" class="text-white">Home</a>
                </li>
                <li class="list-inline-item">
                  <span class="text-white">/</span>
                </li>
                <li class="list-inline-item">
                  <a href="#" class="text-white-50">Patient Profile</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

<section class="section doctor-single">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-6">
        <div class="doctor-img-block">
          @{
            if (Model.Input.profilePic == null)
            {
              <img src="~/theme/images/profilePic.png" alt=""id="profilePicture" class="img-fluid w-100"/>
            }
            else
            {
              <img id="profilePicture" alt="profile" class="img-fluid w-100" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.profilePic))" />
            }
          }

          <div class="info-block mt-4">
            <h4 class="mb-0"> @Model.Input.Name</h4>
            <p> @Model.Username</p>

            <ul class="list-inline mt-4 doctor-social-links">
              <li class="list-inline-item">
                <a href="#!"><i class="icofont-facebook"></i></a>
              </li>
              <li class="list-inline-item">
                <a href="#!"><i class="icofont-twitter"></i></a>
              </li>
              <li class="list-inline-item">
                <a href="#!"><i class="icofont-skype"></i></a>
              </li>
              <li class="list-inline-item">
                <a href="#!"><i class="icofont-linkedin"></i></a>
              </li>
              <li class="list-inline-item">
                <a href="#!"><i class="icofont-pinterest"></i></a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-lg-8 col-md-6">
        <div class="doctor-details mt-4 mt-lg-0">
          <h2 class="text-md">About myself as a patient</h2>
          <div class="divider my-4"></div>
          <p style="font-size: 19px;
                        line-height: 1.5;
                        letter-spacing: 2px;
                        font-weight: bold;">
            Full Name : @Model.Input.Name <br/><br/>
            Age : @Model.Input.Age <br/><br/>
            Gender : @Model.Input.Gender <br/><br/>
            Address : @Model.Input.Address <br/><br/>
            Email : @Model.Username <br/><br/>
            National ID (SSN) : @Model.Input.SSN<br/><br/>
            Phone Number : @Model.Input.PhoneNumber<br/><br/>
          </p>
          <a asp-controller="Appointment"
             asp-action="Create"
             class="btn btn-main-2 btn-round-full mt-3">Make an Appoinment<i class="icofont-simple-right ml-2"></i></a>
          <a class="btn btn-main-2 btn-round-full mt-3"
             asp-controller="Appointment" asp-action="Index"
             style="    background: #2196F3;
                            color: #fff;
                            border-color: #03A9F4;">Show my appointments<i class="icofont-simple-right ml-2"></i></a>
        </div>
      </div>
    </div>
  </div>
</section>




<h1 style="text-align: center;font-family: monospace;">Manage your account</h1>

<div>
  <h2 style="margin: 40px;text-align: center;">Change your account settings</h2>
  <hr />
  <div class="row" style="margin-bottom: 50px;">
    <div class="col-md-3" style="margin-right: 125px;">
      <partial name="_ManageNav"/>
    </div>
    <div class="col-md-7">
      <h3>@ViewData["Title"]</h3>
      <partial name="_StatusMessage" for="StatusMessage" />
      <form id="profile-form" method="post" enctype="multipart/form-data">
        <div class="row">
          <div class="col-md-6" >
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
              <input asp-for="Input.Name" class="form-control" placeholder="Please Type your Full Name."  />
              <label asp-for="Input.Name" class="form-label"></label>
              <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
              <input asp-for="Input.Age" class="form-control" placeholder="Please Type your Age."  />
              <label asp-for="Input.Age" class="form-label"></label>
              <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
              <input asp-for="Input.Gender" class="form-control" placeholder="Please Type your Gender."  />
              <label asp-for="Input.Gender" class="form-label"></label>
              <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
              <input asp-for="Input.Address" class="form-control" placeholder="Please Type your Address."  />
              <label asp-for="Input.Address" class="form-label"></label>
              <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
              <input asp-for="Input.SSN" class="form-control" placeholder="Please Type your Full Name."  />
              <label asp-for="Input.SSN" class="form-label"></label>
              <span asp-validation-for="Input.SSN" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
              <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
              <label asp-for="Username" class="form-label"></label>
              <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
              <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
              <label asp-for="Input.PhoneNumber" class="form-label"></label>
              <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
              <input asp-for="Input.profilePic" type="file" accept="image/*" class="custom-file-input"/>
              @* onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])"  *@
              <label asp-for="Input.profilePic" class="custom-file-label">Change Your profile picture.</label>
              <span asp-validation-for="Input.profilePic" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" style="width: 30%;outline: none;border: none;transition-duration: .5s;" class=" btn-lg btn-primary">Save</button>
          </div>
        </div>
      </form>
      
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
