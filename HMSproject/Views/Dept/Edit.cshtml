@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using HMSproject.Models

@model Department


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <strong style="font-size: 25px">Edit</strong>
                <span style="color: #f1c34f; font-size: 20px">Department</span>
                <hr width="" style="margin-top: 0" />
            </div>
            <div class="card-body card-block">
                <form asp-action="Edit"
                      method="POST"
                      enctype="multipart/form-data"
                      class="form-horizontal">
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="name" class="form-control-label text-black">Dept Name</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input type="text"
                                   id="name"
                                   asp-for="Name"
                                   placeholder="dept name"
                                   class="form-control" />
                            <span asp-validation-for="Name" class="text-danger font-12"></span>
                        </div>
                    </div>
                    
                    <div class="row form-group mt-4">
                        <div class="col col-md-3">
                            <label for="name" class="form-control-label text-black">Appointment Cost</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input type="number"
                                   id="name"
                                   asp-for="app_price"
                                   placeholder="cost"
                                   class="form-control" />
                            <span asp-validation-for="app_price" class="text-danger font-12"></span>
                        </div>
                    </div>

                    <div class="row form-group mt-4">
                        <div class="col col-md-3">
                            <label for="textarea-input"
                                   class="form-control-label text-black">Description</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <textarea asp-for="Description"
                                      id="textarea-input"
                                      rows="5"
                                      placeholder="department description..."
                                      class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger font-12"></span>
                        </div>
                    </div>

                    <div class="row form-group mt-4" style="display: none;">
                        <div class="col col-md-3">
                            <label for="file-input"
                                   class="form-control-label text-black">Dept Image</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input type="text"
                                   id="file-input"
                                   asp-for="Image"
                                   class="form-control" />
                        </div>
                    </div>
                    <div class="card-footer"
                         style="
                    display: flex;
                    justify-content: space-between;
                    margin-top: 25px;
                    background-color: white;
                  ">
                        <button type="submit"
                                class="btn btn-outline-primary btn-sm mx-4">
                            <i class="fas fa-pencil"></i> Update
                        </button>
                        <button type="reset" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-ban"></i> Reset
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@* Client Side Validation*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}