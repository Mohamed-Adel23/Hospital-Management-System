@model Department


@{
    ViewData["Title"] = $"{ViewBag.Name}";
    Layout = "_Layout";
}

<section class="page-title bg-1">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block text-center">
                    <span class="text-white">Department Details</span>
                    <h1 class="text-capitalize mb-5 text-lg">@ViewBag.Name</h1>

                    <ul class="list-inline breadcumb-nav">
                        <li class="list-inline-item">
                            <a asp-controller="Home" asp-action="Index" class="text-white">Home</a>
                        </li>
                        <li class="list-inline-item">
                            <span class="text-white">/</span>
                        </li>
                        <li class="list-inline-item">
                            <a asp-controller="Dept" asp-action="SingleDepartment" class="text-white-50">Department Details</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section department-single">
    <div class="container">
        @foreach(var obj in ViewBag.Dept) {
            <div class="row">
                <div class="col-lg-12">
                    <div class="department-img">
                        <img src="~/images/dept/@obj.Image" alt="" class="img-fluid" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="department-content mt-5">
                        <h3 class="text-md">@obj.Name</h3>
                        <div class="divider my-4"></div>
                        <p class="lead">
                            Our team of experienced professionals works tirelessly to provide you with the highest level of care and support.
                        </p>
                        <p>
                            @obj.Description
                        </p>

                        <h3 class="mt-5 mb-4">Services features</h3>
                        <div class="divider my-4"></div>
                        <ul class="list-unstyled department-service">
                            <li>
                                <i class="icofont-check mr-2"></i>International Drug Database
                            </li>
                            <li>
                                <i class="icofont-check mr-2"></i>Stretchers and Stretcher
                                Accessories
                            </li>
                            <li>
                                <i class="icofont-check mr-2"></i>Cushions and Mattresses
                            </li>
                            <li>
                                <i class="icofont-check mr-2"></i>Cholesterol and lipid tests
                            </li>
                            <li>
                                <i class="icofont-check mr-2"></i>Critical Care Medicine
                                Specialists
                            </li>
                            <li><i class="icofont-check mr-2"></i>Emergency Assistance</li>
                        </ul>

                        <a asp-controller="Appointment" asp-action="Create" class="btn btn-main-2 btn-round-full">
                            Make an Appoinment<i class="icofont-simple-right ml-2"></i>
                        </a>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="sidebar-widget schedule-widget mt-5">
                        <h5 class="mb-4">Time Schedule</h5>

                        <ul class="list-unstyled">
                            <li class="d-flex justify-content-between align-items-center">
                                Sun - Wed : <span>8:00 - 17:00</span>
                            </li>
                            <li class="d-flex justify-content-between align-items-center">
                                Thu - Fri : <span>9:00 - 17:00</span>
                            </li>
                            <li class="d-flex justify-content-between align-items-center">
                                Sat - sun : <span>10:00 - 17:00</span>
                            </li>
                        </ul>

                        <div class="sidebar-contatct-info mt-4">
                            <p class="mb-0">Need Urgent Help?</p>
                            <h3>+23-4565-65768</h3>
                        </div>
                    </div>
                    <div class="sidebar-widget schedule-widget mt-5">
                        <h5 class="mb-4">Stuff Details</h5>

                        <ul class="list-unstyled">
                            <li class="d-flex justify-content-between align-items-center">
                                <span>Number of Doctors</span>
                                @foreach (KeyValuePair<int, int> dr in ViewBag.Doc)
                                {
                                    <span class="text-center text-black">
                                        @dr.Value
                                    </span>
                                    break;
                                }
                            </li>
                            <li class="d-flex justify-content-between align-items-center">
                                <span>Number of Nurses</span>
                                @foreach (KeyValuePair<int, int> ns in ViewBag.Nur)
                                {
                                    <span class="text-center text-black">
                                        @ns.Value
                                    </span>
                                    break;
                                }
                            </li>
                        </ul>
                    </div>
                </div>

                
            </div>
        }
    </div>
</section>
