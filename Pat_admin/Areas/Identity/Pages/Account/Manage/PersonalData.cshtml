@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 style="margin: 40px;text-align: center;">@ViewData["Title"]</h3>

<div class="row" style="margin-bottom: 50px;" >
    <div class="col-md-3" style="margin-right: 125px;">
        <partial name="_ManageNav"/>
    </div>
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button style="width: 30%;outline: none;border: none;transition-duration: .5s;" class="btn btn-primary" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" style="width: 30%;outline: none;border: none;transition-duration: .5s;" class="btn btn-danger">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
