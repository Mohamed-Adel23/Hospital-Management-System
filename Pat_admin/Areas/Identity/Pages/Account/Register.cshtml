<div class="row" style="width: 60%;margin: 100px auto;">
        @* <div class="col-md-4"> *@
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 style="font-family: var(--bs-body-font-family);font-weight: unset;">Create a new account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="appoinment-form form-floating">
                    <input asp-for="Input.Name" autocomplete="Name" aria-required="true" placeholder="Full Name" class="form-control" />
                    <label asp-for="Input.Name"></label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="appoinment-form form-floating">
                    <input asp-for="Input.SSN" placeholder="National ID: (SSN)" class="form-control" />
                    <label asp-for="Input.SSN"></label>
                    <span asp-validation-for="Input.SSN" class="text-danger"></span>
                </div>
                <div class="appoinment-form  form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="appoinment-form form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="appoinment-form form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" style="width: 30%;outline: none;border: none;transition-duration: .5s;" class="btn-lg btn-primary">Register</button>
            </form>
        @* </div> *@
        <a asp-page="/Account/Login" style="margin-top: 20px;"> Already have an account?</a>
    </div>
