@using hmsAdmin.Models

@model IEnumerable<Appointment>


<div class="row">
    <div class="col-2"></div>
    <div class="col-9 mt-5 pt-5 mx-5 px-5">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-dark mb-4 mt-2 font-20">Appointments</h4>
              
                <div class="table-responsive">
                    <table class="table no-wrap v-middle mb-0">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th>Patient Name</th>
                                <th class="text-center">Patient Age</th>
                                <th class="text-center">Patient Phone</th>
                                <th class="text-center">Department</th>
                                <th class="text-center">Doctor</th>
                                <th class="text-center">Day</th>
                                <th class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var obj in Model) {
                                <tr>
                                    @if (obj.Status == 1)
                                    {
                                        <td class="text-success">
                                            @obj.FkPatNavigation.Name
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-danger">
                                            @obj.FkPatNavigation.Name
                                        </td>
                                    }
                                    <td class="text-center">
                                        @obj.FkPatNavigation.Age
                                    </td>
                                    <td class="text-center">
                                        @obj.FkPatNavigation.Phone
                                    </td>
                                    <td class="text-center">@obj.FkDeptNavigation.Name</td>

                                    @foreach (KeyValuePair<int, string> name in ViewBag.Names)
                                    {
                                        if (name.Key == obj.FkDept)
                                        {
                                            <td class="text-center">
                                                @name.Value
                                            </td>
                                            break;
                                        }
                                    }
                                   
                                    <td class="text-center text-orange">
                                        @obj.day
                                    </td>
                                    @if (obj.Status == 1)
                                    {
                                        <td class="text-center">
                                            <i class="fa fa-circle text-success font-12"
                                            data-bs-toggle="tooltip"
                                            data-placement="top"
                                            title="completed"></i>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-center">
                                            <i class="fa fa-circle text-danger font-12"
                                               data-bs-toggle="tooltip"
                                               data-placement="top"
                                               title="cancelled"></i>
                                        </td>
                                    }
                                </tr>
                            }
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <footer class="footer text-center text-muted">
            All Rights Reserved &copy; Copyright.
            <a href="#">Before Others</a>.
        </footer>
    </div>
</div>